@page
@model MakeBitByte.IDP.Pages.User.Registration.IndexModel
@{
    <div>
        <div class="page-header">
            <h1>User Registration</h1>
        </div>        
       
        <partial name="_ValidationSummary"/>

        <div class="row">
            <div class="col-sm-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">User Registration</h3>
                    </div>
                    <div class="panel-body">
                        <form asp-page="/User/Registration/Index">
                            <input type="hidden" asp-for="Input.ReturnUrl" />
                            <fieldset>
                                <div class="form-group">
                                    <label asp-for="Input.UserName"></label>
                                    <input class="form-control" placeholder="User name" asp-for="Input.UserName"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input class="form-control" placeholder="Password" autocomplete="off"
                                           asp-for="Input.Password"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.GivenName"></label>
                                    <input class="form-control" placeholder="Given name" asp-for="Input.GivenName"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.FamilyName"></label>
                                    <input class="form-control" placeholder="Family name" asp-for="Input.FamilyName"/>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input class="form-control" placeholder="Email" asp-for="Input.Email" />
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-primary">Register</button>
                                </div>
                            </fieldset>
                        </form>
                    </div>                    
                </div>                
            </div>
        </div>
    </div>


    
}

